<% layout('layout') -%>

    <div class="container">

        <div class="row">

            <div class="col-sm6 col-md-4">
                <img class="img-circle img- responsive img-center" src="<%= user.profile.picture %>" alt="">

                <br>
                <br>

                <p>Name:
                    <%= user.profile.name %>
                </p>
                <p>E-mail:
                    <%= user.email %>
                </p>

                <% if (user.address === "" || typeof user.address === 'undefined') { %>

                    <p>Address: <span style="color: #c0392b; font-weight: bold">You have no address</span></p>

                    <% } else { %>

                        <p>Address:
                            <%= user.address %>
                        </p>

                        <% } %>
                            <br>
                            <a class="btn btn-lg btn-danger" role="button" href="/edit-profile">Edit Profile</a>

            </div>


        </div>


    </div>
